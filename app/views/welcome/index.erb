        <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.12.1/TweenLite.min.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.12.1/easing/EasePack.min.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.12.1/jquery.gsap.min.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.12.1/plugins/CSSPlugin.min.js"></script>

        <script>
            $(function(){

                $logo = $('.logo');

                jiggleLogo = function() {
                    TweenLite.fromTo($logo, .6, {
                      scaleX: .85
                    }, {
                      scaleX: 1,
                      visibility: 'visible',
                      ease: Elastic.easeOut
                    });

                    TweenLite.fromTo($logo, .6, {
                      scaleY: .85
                    }, {
                      scaleY: 1,
                      opacity: 1,
                      visibility: 'visible',

                      delay: .03,
                      ease: Elastic.easeOut
                    });
                }

                jiggleLogo()

                TweenLite.from($('.hero p').css('visibility', 'visible'), .4, {
                    opacity: 0,
                    y: 50,
                    scale: .9,
                    ease: Back.easeOut,
                    delay: .4
                });

                TweenLite.from($('.hero form').css('visibility', 'visible'), .4, {
                    opacity: 0,
                    y: 50,
                    scale: .98,
                    ease: Back.easeOut,
                    delay: .5
                });

                $logo.click(jiggleLogo);

                $columns = $('.col');

                $columns.bind('inview', function(event, isInView, visiblePartX, visiblePartY) {
                  if (isInView) {
                    $('.col-1 > *').each(function(i, el){
                        $el = $(el);
                        TweenLite.from($el.css('visibility', 'visible'), .6, {
                            // x: -200,
                            y: 100,
                            delay: i * .05,
                            ease: Back.easeOut,
                            opacity: 0
                        });
                    });
                    $('.col-2 > *').each(function(i, el){
                        $el = $(el);
                        TweenLite.from($el.css('visibility', 'visible'), .65, {
                            // x: 200,
                            y: 100,
                            delay: i * .05,
                            ease: Back.easeInOut,
                            opacity: 0
                        });
                    });

                    // $('.col-1')
                    $columns.unbind('inview')
                  }
                });

                $(window).trigger('checkInView')
            });
        </script>
